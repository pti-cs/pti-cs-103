% Answer lines
% ------------------------------------------------------------------------------
\newcommand{\underlined}[1]{
  \begin{tabularx}{\answerlinelength}{>{\centering\arraybackslash}X}
    #1 \\[0.5ex] \hline
  \end{tabularx}
}

\makeatletter
\renewcommand\answerline[1][{}]{
  \par \nobreak \vskip \answerskip
  \hfill 
  \ifprintanswers
    \hbox to \answerlinelength{%
      \CorrectChoice@Emphasis \hfil \pbox[t]{\answerlinelength}{\underlined{#1}}\hss}%
  \else
    \hbox to \answerlinelength{\hrulefill}%
  \fi
  \par
}
\makeatother

